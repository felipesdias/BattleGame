{
  "name": "battlegame",
  "version": "0.0.1",
  "description": "Battle Game",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon --ignore './client/' dist/server.js",
