    "url": "https://github.com/felipesdias/BattleGame/issues"
  },
  "homepage": "https://github.com/felipesdias/BattleGame#readme",
  "dependencies": {
    "@types/express": "^4.17.6",
    "@types/lodash": "^4.14.150",
    "@types/socket.io": "^2.1.4",
    "concurrently": "^5.2.0",
    "express": "^4.18.2",
    "hammerjs": "^2.0.8",
    "nodemon": "^2.0.3",
    "socket.io": "^2.3.0"
  }
